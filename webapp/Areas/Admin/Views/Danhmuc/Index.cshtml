@model IEnumerable<webapp.Models.Danhmuc>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid px-4">
    <center><h1 class="mt-4">Danh mục</h1></center>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
        <li class="breadcrumb-item active">Danh mục</li>
    </ol>

    <a asp-action="Create"><button type="button" class="btn btn-warning"><i class="fa-solid fa-cart-plus"></i> Thêm danh mục</button></a>
    <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0 float-right">
        <form asp-action="Search" class="input-group">
            <input class="form-control" name="searchPhrase" type="text" placeholder="Tìm kiếm..." />
            <button class="btn btn-primary" id="btnNavbarSearch" type="submit"><i class="fas fa-search"></i></button>
        </form>
    </form>
    <button type="button" class="btn btn-primary float-none" onclick="print()"><i class="fa-solid fa-print"></i> In danh sách</button>
    <br><br>
    <div class="card mb-4">
        <div class="card-body">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Tên danh mục</th>
                        <th colspan="3">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tendm)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Madm"><button type="button" class="btn btn-warning"><i class="fa-solid fa-pen"></i></button></a>
                                <a asp-action="Details" asp-route-id="@item.Madm"><button type="button" class="btn btn-success"><i class="fa-solid fa-eye"></i></button></a>
                                <a asp-action="Delete" asp-route-id="@item.Madm"><button type="button" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></button></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- pagination -->
    <div>
        <nav>
            <ul class="pagination d-flex justify-content-center flex-wrap pagination-rounded-flat pagination-success">
                <li class="page-item"><a class="page-link" href="#" data-abc="true"><i class="fa fa-angle-left"></i></a></li>
                <li class="page-item active"><a class="page-link" href="#" data-abc="true">1</a></li>
                <li class="page-item"><a class="page-link" href="#" data-abc="true">2</a></li>
                <li class="page-item"><a class="page-link" href="#" data-abc="true">3</a></li>
                <li class="page-item"><a class="page-link" href="#" data-abc="true">4</a></li>
                <li class="page-item"><a class="page-link" href="#" data-abc="true"><i class="fa fa-angle-right"></i></a></li>
            </ul>
        </nav>
    </div>
    <div style="height: 20vh"></div>
    <div class="card mb-4"><div class="card-body">When scrolling, the navigation stays at the top of the page. This is the end of the static navigation demo.</div></div>
</div>
