@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Đăng nhập</title>
    <link href="~/css/styleLogin.css" rel="stylesheet" />
</head>
<body>
    <partial name="_Notification" />
    <div class="overlay">
        <form action="/Admin/Tkadmin/Login" method="post">
            <div class="con">
                <!--     Start  header Content  -->
                <header class="head-form">
                    <h4 style="color:red;text-align:center">@ViewBag.ThongBao</h4>
                    <h2>Đăng nhập</h2>
                    <br />
                    <p>Sử dụng tài khoản và mật khẩu để đăng nhập</p>
                </header>
                <!--     End  header Content  -->
                <br>
                <div class="field-set">

                    <!--   user name -->
                    <span class="input-item">
                        <i class="fa-solid fa-user"></i>
                    </span>
                    <!--   user name Input-->
                    <input class="form-input" name="username" id="txt-input" type="text" placeholder="Tài khoản" required>

                    <br>

                    <!--   Password -->

                    <span class="input-item">
                        <i class="fa-solid fa-lock"></i>
                    </span>
                    <!--   Password Input-->
                    <input class="form-input" name="pass" type="password" placeholder="Mật khẩu" id="pwd" required>

                    <!--      Show/hide password  -->
                    @*<span>
                        <i class="fas fa-eye" aria-hidden="true" type="button" id="eye"></i>
                    </span>*@
                    <br>


                    <!--        buttons -->
                    <!--      button LogIn -->
                    <button type="submit" class="log-in"> Đăng Nhập </button>
                </div>

                <!--   other buttons -->
                <div class="other">
                    <a href="#">Quên mật khẩu</a>
                </div>

                <!--   End Conrainer  -->
            </div>

            <!-- End Form -->
        </form>
    </div>

</body>
</html>
<script src="~/js/login.js"></script>